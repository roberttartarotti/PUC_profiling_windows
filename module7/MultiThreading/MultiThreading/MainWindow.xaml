<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MultiThreading.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiThreading"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MultiThreading Performance Demo - Visual Studio Profiler">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="20,10">
            <StackPanel>
                <TextBlock Text="Demonstração de Performance Multithreading" 
                          FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <!-- Navigation Frame -->
        <Frame x:Name="ContentFrame" Grid.Row="1" Margin="20"/>
    </Grid>
</Window>
