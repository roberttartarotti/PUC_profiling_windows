<UserControl x:Class="WpfXamlPerformanceDemo.HeavyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" 
             Height="100">

    <Border Background="White" 
            BorderBrush="#ddd" 
            BorderThickness="1"
            CornerRadius="5"
            Margin="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="3" ShadowDepth="1"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header com gradiente -->
            <Border Grid.Row="0" 
                   CornerRadius="5,5,0,0"
                   Padding="5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#f1f2f6" Offset="0"/>
                        <GradientStop Color="#dfe4ea" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="Heavy Control" 
                          FontWeight="Bold" 
                          FontSize="11"/>
            </Border>

            <!-- Conteúdo com múltiplos elementos -->
            <StackPanel Grid.Row="1" Margin="5">
                <ProgressBar Height="10" 
                            IsIndeterminate="True"
                            Margin="0,0,0,5"/>

                <TextBlock Text="Processing..." 
                          FontSize="9" 
                          HorizontalAlignment="Center"/>

                <!-- Grid interno desnecessário -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" 
                            Width="15" 
                            Height="15" 
                            HorizontalAlignment="Center">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="Green" Offset="0"/>
                                <GradientStop Color="LightGreen" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Ellipse Grid.Column="1" 
                            Width="15" 
                            Height="15" 
                            HorizontalAlignment="Center">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="Red" Offset="0"/>
                                <GradientStop Color="Pink" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </StackPanel>

            <!-- Footer com botões -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5">
                <Button Content="✓" 
                       Width="20" 
                       Height="20" 
                       Margin="2"
                       FontSize="9"/>
                <Button Content="✗" 
                       Width="20" 
                       Height="20" 
                       Margin="2"
                       FontSize="9"/>
                <Button Content="ⓘ" 
                       Width="20" 
                       Height="20" 
                       Margin="2"
                       FontSize="9"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>